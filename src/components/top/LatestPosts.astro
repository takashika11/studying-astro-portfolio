---
import { getCollection } from "astro:content";

const allPosts = await getCollection("blog");
const latestPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 3); // 最新3件を取得
---

<section class="latest-posts-section">
  <div class="content">
    <h2>Latest Posts</h2>
    <div class="posts-grid">
      {latestPosts.map((post) => (
        <a href={`/blog/${post.slug}`} class="post-card">
          <div class="card-content">
            <h3>{post.data.title}</h3>
            <p class="post-date">{post.data.pubDate.toLocaleDateString()}</p>
          </div>
        </a>
      ))}
    </div>

    <div class="cta-container">
      <a href="/contact" class="cta-button">Contact Me</a>
    </div>

  </div>
</section>

<style>
  .latest-posts-section {
    padding: 80px 20px;
    text-align: center;
  }

  .content {
    max-width: 1200px;
    margin: 0 auto;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 40px;
    position: relative;
    display: inline-block;
    color: var(--text-color);
  }

  h2::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 3px;
    background: var(--primary-color);
  }

  .posts-grid {
    display: grid;
    /* 画面幅が広い時に3列表示、狭い時に1列表示 */
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    
    /* レスポンシブ対応 */
    @media (max-width: 768px) {
        grid-template-columns: 1fr;
    }
}

  .post-card {
    background: var(--card-bg);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
  }

  .card-content {
    padding: 50px;
    text-align: left;
  }

  h3 {
    font-size: 1.2rem;
    margin-bottom: 10px;
    color: var(--heading-color);
  }
  
  .post-date {
    font-size: 0.9rem;
    color: var(--secondary-text-color);
  }

   .cta-container {
    margin-top: 40px; /* 上部に余白を作成 */
    text-align: center;
  }
  
  .cta-button {
    display: inline-block;
    padding: 12px 24px;
    background: var(--primary-color); /* この部分を修正します */
    color: #fff;
    text-decoration: none;
    border-radius: 50px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    font-weight: bold;
    font-size: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
  }

</style>